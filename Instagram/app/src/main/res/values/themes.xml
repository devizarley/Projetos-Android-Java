<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Instagram" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#8692f7</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorPrimaryDarkMode</item>

        <item name="itemIconTint" />

    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="dialogbkgStyle">
        <item name="android:background">@drawable/dialogbkg</item>
    </style>
    
    <style name="iconCloseDialog">
        <item name="srcCompat">@drawable/ic_clear_black</item>
    </style>

    <style name="styleToolbar">
        <item name="navigationIcon">@drawable/ic_back_black</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="container_inputText">
        <item name="android:background">@drawable/border_redounded_chat</item>
    </style>

    <style name="fabSubmit">
        <item name="android:backgroundTint">@color/gray2</item>
        <item name="srcCompat">@drawable/send_black</item>
    </style>

    <style name="ProgressBarStyle" parent="android:Widget.ProgressBar">
        <item name="android:colorAccent">#3f80ff</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorSecondary">@android:color/transparent</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="themeLoginCadastro">
        <item name="android:background">@color/white</item>
    </style>

    <style name="backgroundFeed">
        <item name="android:background">@drawable/border_redounded_feed</item>
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="backgroundBottom">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="iconTint">
        <item name="itemIconTint">@color/black</item>
    </style>

    <style name="fabStyle">
        <item name="android:src">@drawable/ic_add_dark</item>
        <item name="android:backgroundTint">#3f80ff</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="logoStyle">
        <item name="srcCompat">@drawable/logodark</item>
    </style>

    <style name="iconMenuSair">
        <item name="srcCompat">@drawable/ic_logout_black</item>
    </style>

    <style name="themeLogo">
        <item name="android:src">@drawable/logodark</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="themeInput">
        <item name="android:background">@drawable/border_redounded</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="themeButton">
        <item name="android:background">@drawable/border_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">30dp</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Instagram.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WhatsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>