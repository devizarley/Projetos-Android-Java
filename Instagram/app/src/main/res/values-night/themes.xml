<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Instagram" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimaryDarkMode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMode</item>
        <item name="colorAccent">@color/colorPrimaryDarkMode</item>

        <item name="colorControlActivated">@color/white</item>

    </style>

    <style name="backgroundFeed">
        <item name="android:background">@drawable/border_redounded_feed_darkmode</item>
    </style>

    <style name="ProgressBarStyle" parent="android:Widget.ProgressBar">
        <item name="android:colorAccent">#3f80ff</item>
    </style>

    <style name="background">
        <item name="android:background">@color/colorPrimaryDarkMode</item>
    </style>

    <style name="backgroundBottom">
        <item name="android:backgroundTint">@color/secondColor</item>
    </style>

    <style name="iconTint">
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="fabStyle">
        <item name="android:src">@drawable/ic_add_white</item>
        <item name="android:backgroundTint">#3f80ff</item>
    </style>

    <style name="logoStyle">
        <item name="srcCompat">@drawable/logo</item>
    </style>

    <style name="dialogbkgStyle">
        <item name="android:background">@drawable/dialogbkg_darkmode</item>
    </style>

    <style name="titleToolbar">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="iconCloseDialog">
        <item name="srcCompat">@drawable/ic_close_white</item>
    </style>

    <style name="styleToolbar">
        <item name="navigationIcon">@drawable/ic_back_white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="iconMenuSair">
        <item name="srcCompat">@drawable/ic_logout_white</item>
    </style>

    <style name="themeLoginCadastro">
        <item name="android:background">@color/colorPrimaryDarkMode</item>
    </style>

    <style name="themeBackground">
        <item name="android:background">@color/colorPrimaryDarkMode</item>
    </style>

    <style name="themeLogo">
        <item name="android:src">@drawable/logo</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="themeInput">
        <item name="android:background">@drawable/border_redounded_darkmode</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="container_inputText">
        <item name="android:background">@drawable/border_redounded_chat_darkmode</item>
    </style>

    <style name="fabSubmit">
        <item name="android:backgroundTint">@color/secondColor</item>
        <item name="srcCompat">@drawable/send_white</item>
    </style>

    <style name="themeButton">
        <item name="android:background">@drawable/border_button_darkmode</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">30dp</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Instagram..AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.WhatsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>