    </style>
    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="viewPager">
        <item name="android:background">@color/white</item>
    </style>
    <style name="viewPagerTab">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="icons">
